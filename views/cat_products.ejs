<%- include('partials/header') %>

<div class="container">

  <div class="row products">

      <% products.forEach(function(p){ %>
              <div class="col-xs-12 col-md-4 p">
                <table class="table table-striped table-info">
                      <thead>
                        <tr>
                          <th><h3><%= p.title %></h3></th>
                        </tr>
                      </thead>
                      <tbody>
                        <tr>
                          <td><div class="ay">
                            <a class="pa" href="/products/<%= p.category %>/<%= p.slug %>">
                                <img class="pimage" align="center" src="/product_images/<%= p.id %>/<%= p.image %>" alt="">
                            </a>
                          </div></td>
                        </tr>
                        <tr>
                          <td><div>
                            <h4>$<%= parseFloat(p.price).toFixed(2) %></h4>
                          </div>
                        </tr>
                        <tr>
                          <td><a class="vd btn btn-outline-danger" href="/products/<%= p.category %>/<%= p.slug %>">Ver Detalles &#10145;</a></td>
                        </tr>
                      </tbody>
                </table>
              </div>
          <% }); %>
  </div>


<%- include('partials/footer') %>
