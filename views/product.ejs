<%- include('partials/header') %>

<div class="row">

    <table class="table table-striped table-info table-responsive-xl">
<thead>
  <tr>
    <th>Nombre:</th>
    <th><h1><%= p.title %></h1></th>
  </tr>
</thead>
<tbody>
  <tr>
    <td>Imagen:</td>
    <td><img class="image2" src="/product_images/<%= p.id %>/<%= p.image %>" alt=""></td>
  </tr>
  <tr>
    <td>Description:</td>
    <td><h3><%= p.desc %></h3></td>
  </tr>
  <tr>
    <td>Precio:</td>
    <td>$ <%= parseFloat(p.price).toFixed(2) %></td>
  </tr>
