<%- include('partials/header') %>

<div class="container">


      <table class="table table-striped table-dark col-xs-12 col-md-5" id="Table-cat">

        <thead>
          <tr class="home">
              <th>Nombre del producto</th>
              <th>Imagen</th>
              <th>precio</th>
              <th>Detalles</th>
          </tr>
        </thead>
        <tbody>
          <% products.forEach(function(p){ %>
          <tr>
            <td><h4><%= p.title %></h4></td>
            <td><a class="noimage" href="/products/<%= p.category %>/<%= p.slug %>"><img class="pimage" src="/product_images/<%= p.id %>/<%= p.image %>" alt=""></a></td>
            <td><h4>$<%= parseFloat(p.price).toFixed(2) %></h4></td>
            <td><a class="vd btn btn-outline-danger" href="/products/<%= p.category %>/<%= p.slug %>">Ver Detalles &#10145;</a></td>
          </tr>
          <% }); %>
        </tbody>
      </table>


</div>

<%- include('partials/footer') %>
